<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodApp.MainPage"
            xmlns:pages="clr-namespace:FoodApp.Pages"
             BackgroundColor="{StaticResource mainAppColor}"
            SelectedTabColor="Black">
    <TabbedPage.ToolbarItems>
        <ToolbarItem Text="{Binding Email, Mode=TwoWay, StringFormat='Login As: {0}'}"/>
    </TabbedPage.ToolbarItems>

    <pages:HistoryPage Title="History"/>
    <pages:NewMealPage Title="Meals"/>
    <pages:ProfilePage Title="Profile"/>

</TabbedPage>
